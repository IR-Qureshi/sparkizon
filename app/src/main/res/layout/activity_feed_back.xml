<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EC407A"
        android:orientation="vertical"
        android:padding="2dip">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Give Your Feedback"
            android:textSize="17dp"
            android:textColor="#04FE00"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:id="@+id/custnametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:text="Enter Restaurant Name"
                android:textColor="#04FE00" />


            <EditText
                android:id="@+id/cust_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:layout_marginLeft="28dip">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip">

            <TextView
                android:layout_marginTop="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your Name."
                android:textColor="#04FE00"/>

            <EditText
                android:id="@+id/cust__number"
                android:layout_marginTop="40dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dip"
                android:maxLength="25"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip">

            <TextView
                android:layout_marginTop="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your feedback"
                android:textColor="#04FE00"/>
            <EditText
                android:id="@+id/cust_email"
                android:layout_marginTop="40dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip">


        </LinearLayout>
        <Button
            android:id="@+id/Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SEND"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#04FE00"
            android:background="@drawable/btn_style"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>